%header.head
  -if flash[:notice]
    .head__flash
      =flash[:notice]

  .head__in
    = form_with(url: search_items_path, local: true, method: :get) do |f|
      .head__in__up
        %h1
          =link_to root_path do
            = image_tag "http://furima.tokyo/assets/logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23.svg", class: "head__in__up__logo" 
        .head__in__up__search
          = f.text_field :keyword, class: "head__in__up__search__txt", placeholder:"キーワードから探す"
          -# %input.head__in__up__search__txt{type: "text", placeholder:"キーワードから探す"}
          %label.head__in__up__search__btn
            = icon('fas', 'search', class: '')
            = f.submit "", class: "head__in__up__search__btn--display"
            -# %input.head__in__up__search__btn--display{type: "submit", value: ""}
    .head__in__nav
      .head__in__nav__left
        .head__in__nav__left__cate
          カテゴリー
          %ul.category1
            - @parents.each do |parent|
              %li.parent__list
                = link_to parent.name
                %ul.category2
                  - parent.children.each do |child|
                    %li.child__list
                      =link_to child.name
                      %ul.category3
                        - child.children.each do |grandchild|
                          %li.grandchild__list
                            = link_to grandchild.name

        .head__in__nav__left__brand
          ブランド

      %ul.head__in__nav__right
        %li
          =link_to "商品1", "/items/1"
        %li
          =link_to "商品2", "/items/2"
        %li
          =link_to "商品3", "/items/3"

        -if user_signed_in?
          %li.head__in__nav__right__new
            =link_to "出品", new_item_path
          %li.head__in__nav__right__mypage
            =link_to "マイページ", "#"
          %li.head__in__nav__right__logout
            =link_to "ログアウト", destroy_user_session_path, method: :delete

        -else
          %li.head__in__nav__right__new
            =link_to "新規登録", new_user_registration_path
          %li.head__in__nav__right__login
            =link_to "ログイン", new_user_session_path