.main-box
  .main-box__header
    = link_to '#', class:"main-box__header--link" do
      = image_tag "logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23"
  .box
    .box__header
      %h3 会員情報登録
    .box__form
      -# %h2 会員情報登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field__nickname
          = f.label :ニックネーム
          %span 必須
          %br/
          = f.text_field :nickname, autofocus: true, placeholder: "例）フリマ二郎"
        .field__email
          = f.label :Eメール
          %span 必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "例)###＠gmail.com"
        .field__password
          = f.label :パスワード（６文字以上）
          %span 必須
          - if @minimum_password_length
            -# %em
            -#   (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力"
        .field__confirmation
          = f.label :パスワード確認
          %span 必須
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "もう一度入力"
        .actions__sign_up
          = f.submit "新規登録", { :class => 'submit-btn' }
      -# = render "devise/shared/links"

  .box__footer
    .box__footer__message
      %ul.menu
        %li.menu__me
          = link_to "#", class: "me1" do
            プライバシーポリシー
        %li.menu__me
          = link_to "#", class: "me1" do
            メルカリ利用規約
        %li.menu__me
          = link_to "#", class: "me1" do
            特定商取引に関する表記
      = link_to '#', class:"main-box__header--link" do
        = image_tag "logo-white-f61961ed5170064c5f33dd4524bdceeb5a5df2c83eb76fba31143f63fbab2c5e.svg"
      %p© FURIMA