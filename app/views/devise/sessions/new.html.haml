.main
  .main__header
    = link_to '#', class:"main-box__header--link" do
      = image_tag "logo-d3d78326971d78b06e3d6f0ba666d025a8ad681286b4d9e00e7dbe8673bcfd23"
    %h2.login 
  .main__contents
    アカウントをお持ちではない方はこちら
    = link_to new_user_registration_url, class:"submit-btn" do
      新規登録
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      -# .sign_up
      -#   = f.submit "新規登録", { :class => 'submit-btn' }
      .field
        = f.label :Eメール
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field
        = f.label :パスワード
        %br/
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :記憶します
      .actions
        = f.submit "ログイン", { :class => 'submit-btn' }
