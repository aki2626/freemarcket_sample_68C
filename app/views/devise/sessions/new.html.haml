.main
  .main__header
    = link_to '#', class:"main-box__header--link" do
      = image_tag "logo.png"
  .main__title
    %h2 ログイン
  .main__contents
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field__email
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .field__password
        = f.label :password
        %br/
        = f.password_field :password, autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field__logincheckbox
          = f.check_box :remember_me
          = f.label :remember_me
      .actions
        = f.submit "ログイン", { :class => 'submit-btn' }
    = render "devise/shared/links"
  .main__footer
    .main__footer__message
      %ul.menu
        %li.menu__me
          = link_to "#", class: "me1" do
            プライバシーポリシー
        %li.menu__me
          = link_to "#", class: "me1" do
            メルカリ利用規約
        %li.menu__me
          = link_to "#", class: "me1" do
            特定商取引に関する表記
      = link_to '#', class:"main-box__header--link" do
        = image_tag "logo-white.png"
      %p© FURIMA